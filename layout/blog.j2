{% extends "page.j2" %}

{% block container %}
<div id="detail-row" class="row-fluid">
  <div id="post-content" class="span8">
    <article class="post">
      <div id="post-header">
        <h1>
          {{ resource.meta.title }}
        </h1>
      </div>
      <div id="post-timestamp">
        <time datetime="{{ res.meta.created.strftime('%Y-%m-%d') }}">
          {{ resource.meta.created.strftime('%a, %d %b %Y') }}
        </time>
      </div>

      <div id="post-body">
        {% filter markdown|typogrify -%}
        {% mark post -%}
        {% block post -%}{%- endblock %}
        {%- endmark %}
        {%- endfilter %}
      </div>
    </article>

    <hr></hr>

    <div id="disqus_thread"></div>
    <script>
      var disqus_config = function () {
        this.page.url = document.URL;
        this.page.identifier = "{{ resource.url }}";
      };

      (function() {
        var d = document, s = d.createElement('script');
        s.src = 'https://problemchimp.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
      })();
    </script>

    <hr></hr>

    {% if resource.next_by_time %}<a href="{{ content_url(resource.next_by_time.url) }}">&lt; Previous</a>{% endif %}
    {% if resource.prev_by_time %}<a href="{{ content_url(resource.prev_by_time.url) }}">Next &gt;</a>{% endif %}
  </div>

  <div id="recent-content" class="span4">
    <h2>Recent Posts</h2>
    <ul>
    {% for res in resource.node.walk_resources_sorted_by_time() %}
      {% if loop.index0 < 5 %}<li><a href="{{ content_url(res.url) }}">{{ res.meta.title }}</a></li>{% endif %}
    {%- endfor %}
    </ul>
    <p>Want more articles? Browse the <a href="{{ content_url('blog/archives.html') }}">complete archives.</a></p>
  </div>
</div>
{%- endblock %}
